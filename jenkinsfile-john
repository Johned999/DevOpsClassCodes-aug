pipeline {
    agent any

    stages {
        stage('checkout') {
            steps {
                echo 'checkout from repo using git clone'
                git 'https://github.com/Johned999/DevOpsClassCodes-aug.git'
            }
        }

        stage('compile') {
            steps {
                echo 'compile'
                sh 'mvn compile'
            }
        }

        stage('test') {
            steps {
                echo 'test'
                sh 'mvn test'
            }
        }

        stage('package') {
            steps {
                echo 'package'
                sh 'mvn package'
            }
        }

        stage('docker build') {
            steps {
                echo 'docker build'
            }
        }

        stage('docker log-in') {
            steps {
                echo 'docker log-in'
            }
        }

        stage('docker push') {
            steps {
                echo 'docker push'
            }
        }


    }
}